@model GammaForums.Models.Post.PostIndexModel

<div class="container body-content">
    <div class="row postHeader">
        <div class="postHeading">
            <span class="postIndexTitle">
                @Model.Title
            </span>
            <span id="headingBtn">
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back text-white-50">
                    Back to @Model.ForumName
                </a>
            </span>
        </div>
    </div>
</div>

<h1>
    @Model.Title
</h1>

<div>
    Author: @Model.AuthorName
    Created: @Model.TimeCreated
</div>

<div>
    @Model.PostContent
</div>

@if(Model.Replies.Any())
{
    @foreach (var reply in Model.Replies)
    {
        <div>
            <div>
                Reply Author: @reply.ReplyContent
                Reply Created: @reply.TimeCreated
            </div>
            <div>
                @reply.ReplyContent
            </div>
        </div>
    }
}